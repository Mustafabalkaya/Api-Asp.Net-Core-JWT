@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Rol Ata</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="rounded-circle mr-3" alt="@item.Name @item.SurName">
                                }
                                else
                                {
                                    <img src="~/adminweb/images/users/a.png" class="rounded-circle mr-3" alt="Varsayılan Resim">
                                }
                                @item.Name @item.SurName
                            </td>
                            <td>
                                <a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-primary">Rol Ata</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

